<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="ConnectionStringsConfig" type="TourPlannerDL.CustomConfigLoader, TourPlannerDL" />
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
		<!--type="namespace.class, assembly"-->
	</configSections>
	<log4net>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="..\net5.0-windows\TourLogs.txt"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size"/>
			<maximumFileSize value="5MB"/>
			<maxSizeRollBackups value="5"/>
			<staticLogFileName value="true"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date{ABSOLUTE} [%logger] %level - %message%newline%exception"/>
			</layout>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="RollingFileAppender" />
		</root>
	</log4net>
	<connectionStrings>
		<add name="ConnectionStringConfig" connectionString="Host=localhost;Username=postgres;Password=wordpass;Database=TourPlanner;Port=5432" />
	</connectionStrings>
	<appSettings>
		<add key="MapQuestKey" value="V5j8RGvth4UydnpUgMg2RYyVNpE12fJy"/>
	</appSettings>
</configuration>
